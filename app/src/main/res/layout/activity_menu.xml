<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mindorks.example.ubercaranimation.MenuActivity">


    <ImageView
        android:id="@+id/img_lo_trinh"
        android:layout_width="0dp"
        android:layout_height="179dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_giam_sat"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_lo_trinh_xe"
        tools:srcCompat="@drawable/ic_lo_trinh_xe" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lộ trình xe"
        app:layout_constraintEnd_toEndOf="@+id/img_lo_trinh"
        app:layout_constraintStart_toStartOf="@+id/img_lo_trinh"
        app:layout_constraintTop_toBottomOf="@+id/img_lo_trinh" />

    <ImageView
        android:id="@+id/img_giam_sat"
        android:layout_width="0dp"
        android:layout_height="179dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/img_lo_trinh"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_lo_trinh"
        app:srcCompat="@drawable/ic_giam_sat"
        tools:srcCompat="@drawable/ic_giam_sat" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giám sát xe"
        app:layout_constraintEnd_toEndOf="@+id/img_giam_sat"
        app:layout_constraintStart_toStartOf="@+id/img_giam_sat"
        app:layout_constraintTop_toTopOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>